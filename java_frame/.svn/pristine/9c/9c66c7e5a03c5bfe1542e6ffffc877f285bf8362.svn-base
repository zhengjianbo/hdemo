<!-- 文本框    -->
 
 <%
	 if(isEmpty(id)){
		id="";
	}
	if(isEmpty(name)){
		name="";
	}
	if(isEmpty(class)){
		class="";
	} 
	if(isEmpty(value)){
		value="";
	} 
	
	if(!isEmpty(item)){
		 id=item.control_field_id;
		 value=item.control_value;
		  col_md=item.control_layout;
	} 
	if(isEmpty(name)){
		name=id;
	}
%>
 
<div class="layui-input-inline ${col_md}">
     <input id="${id}"  name="${name}"  value="${value}"  placeholder="请输入密码" autocomplete="off" class="layui-input ${class}" type="${type}">
</div>